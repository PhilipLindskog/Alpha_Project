@model AddProjectViewModel


<section id="add-project-modal" class="modal">
    <div class="card">
        <div class="card-header">
            <h3>Add Project</h3>
            <button data-type="close" data-target="#add-project-modal" class="btn-close"></button>
        </div>
        <div class="card-body">

            <form asp-controller="Projects" asp-action="AddProject" method="post" enctype="multipart/form-data" novalidate>
                <div class="form-group">
                    <div class="upload-trigger image-preview-container project-image">
                        <div class="image-preview-icon-container circle circle-gray">
                            <i class="image-preview-icon fa-duotone fa-solid fa-camera"></i>
                        </div>
                        <img class="image-preview hide" />
                    </div>
                    <input asp-for="ProjectImage" class="image-upload" accept="image/*" />
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="ProjectName"></label>
                    <input class="form-input" asp-for="ProjectName">
                    <span asp-validation-for="ProjectName"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="ClientId"></label>
                    <select asp-for="ClientId" asp-items="@Model.Clients" class="form-input">
                        <option value="" class="form-select-option">Select a Client</option>
                    </select>
                    <span asp-validation-for="ClientId"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-input" ></textarea>
                </div>

                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label" asp-for="StartDate"></label>
                        <input asp-for="StartDate" class="form-input">
                        <span asp-validation-for="StartDate"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="EndDate"></label>
                        <input asp-for="EndDate" class="form-input">
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="MemberId"></label>
                    <select asp-for="MemberId" asp-items="@Model.Members" class="form-input">
                        <option value="" class="form-select-option">Select a Member</option>
                    </select>
                    <span asp-validation-for="MemberId"></span>
                </div>

                <div class="form-group">
                    <label class="form-label" asp-for="Budget"></label>
                    <div class="form-input-extended">
                        <i class="fa-duotone fa-solid fa-dollar-sign"></i>
                        <input asp-for="Budget" class="form-input">
                    </div>
                </div>

                <button type="submit" class="btn">Create</button>
            </form>

        </div>

    </div>
</section>